---
import HeaderCampingNight from "../layout/HeaderCampingNight.astro";

import FooterCampingNight from "../layout/FooterCampingNight.astro";
---

<div
  class="flex flex-col min-h-screen text-zinc-950 dark:text-slate-100 bg-slate-100 dark:bg-zinc-950"
>
  <HeaderCampingNight />

  <main class="flex p-4 pt-20 pb-36 w-full m-auto max-w-[80rem]">
    <section class="flex flex-col gap-8">
      <div
        class="grid items-center justify-center grid-cols-1 gap-4 md:grid-cols-2"
      >
        <div class="flex flex-col items-center justify-center gap-4">
          <h1 class="text-lg font-bold md:text-xl">Lorem ipsum dolor</h1>
          <p class="text-base md:text-lg">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Suscipit
            veniam delectus odit, eveniet eligendi repellendus libero fuga
            fugiat adipisci labore enim voluptatum nisi, magni ab sapiente sequi
            voluptatibus totam temporibus!
          </p>
        </div>

        <img
          src="/Image/CampingNight/img1.webp"
          alt="alt"
          class="object-cover w-full h-full"
        />
      </div>
    </section>
  </main>

  <FooterCampingNight />
</div>
