---
import Navegation from "../components/ui/Navegation";
import Landing from "../layout/Landing.astro";
---

<div class="flex flex-row min-h-dvh">
  <Navegation client:load />
  <div class="flex flex-col min-h-dvh">
    <main class="flex-grow">
      {" "}
      <section class="items-center py-16 text-center">
        <img
          src="/Image/LandingMine/LandingMine.webp"
          alt="Landing"
          class="object-contain w-40 h-auto mx-auto lg:w-60"
        />
        <h1 class="mb-4 text-4xl font-bold text-blue-950 dark:text-orange-300">
          L
          <span
            class="text-4xl font-bold text-transparent stroke-blue-950 dark:stroke-orange-300"
          >
            anding
          </span>
          M
          <span
            class="text-4xl font-bold text-transparent stroke-blue-950 dark:stroke-orange-300"
          >
            ine
          </span>
        </h1>

        <p
          class="text-center w-full p-2 mb-8 text-lg md:max-w-[42rem] md:mx-auto dark:text-white"
        >
          Content
        </p>
      </section>

      <Landing />
    </main>
  </div>
</div>
