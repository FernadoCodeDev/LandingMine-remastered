---
import Search from "../assets/svg/Search";
import Date from "../assets/svg/Date";
import Location from "../assets/svg/Location";
import CheckIn from "../assets/svg/CheckIn";
import CheckOut from "../assets/svg/CheckOut";
import TotalPersons from "../assets/svg/TotalPersons";
---

<div class="flex px-4 py-8 bg-sky-800">
  <div class="m-auto w-full p-4 rounded-xl text-black bg-white max-w-[100rem]">
    <div class="grid items-center justify-center grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6">
      <div
        class="flex flex-col h-full gap-4 p-2 border border-gray-300 bg-slate-100"
      >
        <div class="flex flex-row items-center justify-start gap-4">
          <div class="object-contain w-8 h-8 text-sky-800">
            <Search />
          </div>
          <h1 class="text-lg font-bold text-start">Origen</h1>
        </div>
        <input class="p-1 text-base" type="text" placeholder="Origen" />
      </div>

      <div
        class="flex flex-col h-full gap-4 p-2 border border-gray-300 bg-slate-100"
      >
        <div class="flex flex-row items-center justify-start gap-4">
          <div class="object-contain w-8 h-8 text-sky-800">
            <Location />
          </div>
          <h1 class="text-lg font-bold text-start">Destino</h1>
        </div>
        <input class="p-1 text-base" type="text" placeholder="Destino" />
      </div>

      <div
        class="flex flex-col h-full gap-4 p-2 border border-gray-300 bg-slate-100"
      >
        <div class="flex flex-row items-center justify-start gap-4">
          <div class="object-contain w-8 h-8 text-sky-800">
            <CheckIn />
          </div>
          <h1 class="text-lg font-bold text-start">Fecha de entrada</h1>
        </div>
        <input class="p-1 text-base" type="date" />
      </div>

      <div
        class="flex flex-col h-full gap-4 p-2 border border-gray-300 bg-slate-100"
      >
        <div class="flex flex-row items-center justify-start gap-4">
          <div class="object-contain w-8 h-8 text-sky-800">
            <CheckOut />
          </div>
          <h1 class="text-lg font-bold text-start">Regreso</h1>
        </div>
        <input class="p-1 text-base" type="date" />
      </div>

      <div
        class="flex flex-col h-full gap-4 p-2 border border-gray-300 bg-slate-100"
      >
        <div class="flex flex-row items-center justify-start gap-4">
          <div class="object-contain w-8 h-8 text-sky-800">
            <TotalPersons />
          </div>
          <h1 class="text-lg font-bold text-start">Total de Personas</h1>
        </div>
        <input class="p-1 text-base" type="number" min="1" value="1" />
      </div>

      <button
        class="flex items-center justify-center w-full h-full gap-4 p-2 text-lg font-bold text-white transition-all duration-700 ease-out bg-sky-400 hover:bg-sky-600"
      >
        <Date width="40" height="40" />

        Buscar 
      </button>
    </div>
  </div>
</div>
