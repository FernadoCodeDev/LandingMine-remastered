---
import MobileMenu from "../../GlobalComponents/MobileMenu";
import DarkMode from "../../GlobalComponents/DarkMode";
import Slider from "../components/ui/Slider";
---

<div class="relative w-full h-dvh">
  <div
    class="relative inset-0 flex flex-col w-full bg-center bg-cover h-dvh text-slate-100"
    style={{
      backgroundImage: `url(/Image/Shinrai/Background.webp)`,
    }}
  >
    <div
      class="absolute bottom-0 left-0 flex flex-col items-center justify-center w-full h-full bg-black/60"
    >
    </div>

    <div
      class="relative flex flex-col px-8 py-12 items-center h-full justify-between w-full m-auto max-w-[100rem]"
    >
      <div
        class="grid items-center justify-center w-full h-auto grid-cols-2 gap-4 md:grid-cols-3"
      >
        <div class="flex justify-start md:justify-center">
          <img
            src="/Image/Shinrai/ShinraiLogo.webp"
            alt="ShinraiLogo"
            class="object-contain w-40 h-auto cursor-pointer"
          />
        </div>

        <div class="flex justify-end order:2 md:order-3">
          <DarkMode bgColor="text-slate-100" client:load />
        </div>

        <div
          class="w-fit mx-auto col-span-2 md:col-span-1 order:3 md:order-2 border-slate-100 border-2 backdrop-blur-[4px] rounded-lg"
        >
          <MobileMenu
            textColor="text-slate-100 transition-all duration-900 ease-out"
            hoverColor="hover:text-slate-400"
            bgColor=""
            invertColor="text-white"
            client:load
          />
        </div>
      </div>

      <div
        class="flex flex-col items-center justify-center w-full h-auto max-w-[100rem] gap-6 md:gap-12 mx-auto text-start md:flex-1"
      >
        <div class="flex flex-col items-start justify-start gap-2 md:gap-4">
          <h1 class="text-3xl font-bold text-center md:text-6xl">
            Confía en tu fuerza, Domina tu mente
          </h1>

          <button
            class="p-2 text-center transition-all duration-700 ease-out text-bas bg-beige-100 text-zinc-950 hover:bg-beige-400"
          >
            Más información
          </button>
        </div>

        <Slider client:load />
      </div>
    </div>
  </div>
</div>
